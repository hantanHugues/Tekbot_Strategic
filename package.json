{
  "name": "tekbot-control-center",
  "version": "1.0.0",
  "description": "Application de Contrôle Stratégique pour TEKBOT Robotics Challenge 2025",
  "main": "src/electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"wait-on tcp:5000 && npm run dev:electron\"",
    "dev:vite": "vite --host 0.0.0.0 --port 5000",
    "dev:electron": "electron .",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["robotics", "ros2", "electron", "vue"],
  "author": "TEKBOT Team",
  "license": "ISC",
  "dependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "chart.js": "^4.5.0",
    "concurrently": "^9.2.1",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "roslib": "^1.4.1",
    "vite": "^7.1.5",
    "vue": "^3.5.21",
    "vue-chartjs": "^5.3.2",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.tekbot.control-center",
    "productName": "TEKBOT Control Center",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "src/electron/**/*",
      "package.json"
    ]
  }
}
